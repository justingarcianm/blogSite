<% include partials/header %>


<div class="container">
    <h1 class="center-align">Post here!</h1>
    <div class="row">

        <form action="/blog" method="POST">
            <div class="row">
                <div class="input-field">
                    <input name="title" id="text" type="text" class="validate" data-length="100">
                    <label for="title">Title</label>

                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <input name="author" type="text" class="validate">
                    <label for="author">Author</label>
                </div>
            </div>
            <div class="row">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea name="content" class="materialize-textarea"></textarea>
                        <label for="textarea1">Content</label>
                        <span class="helper-text" data-error="wrong" data-success="right">copy and paste</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <input name="image" type="text" class="validate">
                    <label for="image">Image url</label>
                    <span class="helper-text" data-error="wrong" data-success="right">Right click on image and select
                        "Copy image location"</span>
                </div>
                <p>
                    <label>
                        <input type="checkbox" required />
                        <span>I understand that the admin retains the right to request an edit or remove this post at
                            any time</span>
                    </label>
                </p>
                <div class="center-align">
                    <input class="btn grey darken-4" type="submit" value="Submit Post">
                </div>
            </div>

    </div>
    </form>
</div>
</div>
<a href="/blog"> Go back</a>
<% include partials/footer %>