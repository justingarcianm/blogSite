<% include partials/header %>

<main class="container">
    <!-- Article section -->
    <div class="row">
        <div class="col s12">
            <h2>
                <%= foundArticle.title %>
            </h2>
            <p>
                <img class="circle" style="width: 30px;" src="https://swgoh.gg/static/img/assets/tex.charui_thrawn.png">
                <span class="author">
                    <%= foundArticle.author %>
                </span>
            </p>
            <p>date posted:</p>
        </div>
    </div>
    <div class="row">
        <div class="col m5">
            <p>
                <%= foundArticle.content %>
            </p>
        </div>
        <div class="col m7">
            <img src="<%= foundArticle.image %>" class="responsive-img">
        </div>
        <a href="/blog/<%=foundArticle._id%>/edit" class="btn yellow darken-2">edit</a>
    </div>
    <div class="row">
        <hr>
        <!-- Comments Section -->
        <div class="col s12">
            <h2>Comments:</h2>
            <div class="commentBox">
                <img class="circle" style="width: 30px;" src="https://swgoh.gg/static/img/assets/tex.charui_thrawn.png">
                <span class="author">
                    <%= foundArticle.author %> date posted
                </span>
                <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Suscipit provident obcaecati libero
                    doloribus ad iusto totam rem necessitatibus nisi? Iusto?</p>
            </div>
        </div>
        <!-- New Comment Section -->
        <div id="newComment">
            <form action="/blog/show" method="POST" class="col s12">
                <div class="row">
                    <hr>
                    <div class="col m2 s12">
                        <p>add new comment:</p>
                    </div>
                    <div class="col m4 s12 input-field">
                        <input type="text" class="validate">
                        <label>Author</label>
                    </div>
                    <div class="col m6 s12 input-field">
                        <textarea id="comment" class="materialize-textarea" data-length="150"></textarea>
                        <label>Comment</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col m6 s12">
                        <p>
                            <label>
                                <input type="checkbox" required />
                                <span>I understand that the admin retains the right to request an edit or remove
                                    this comment at
                                    any time.</span>
                            </label>
                        </p>
                    </div>
                    <div class="col m3 s12">
                        <input class="btn grey darken-4" type="submit" value="Submit Comment">
                    </div>
                </div>
            </form>
        </div>
    </div>
    </div>
    </div>

    </div>
</main>

<% include partials/footer %>